{
  "name": "esp32-charging-station-16mb",
  "version": "1.0.0",
  "description": "ESP32 16MB Full-Featured Charging Station Management System",
  "main": "main.cpp",
  "scripts": {
    "build": "node build_web_interface.js",
    "upload": "node upload_to_esp32.js",
    "upload-clean": "node upload_to_esp32.js --clean",
    "monitor": "pio device monitor",
    "deploy": "npm run build && npm run upload",
    "deploy-ota": "pio run --target upload --upload-port $ESP32_IP",
    "test-connection": "curl http://$ESP32_IP/api/system/info"
  },
  "keywords": [
    "esp32",
    "charging-station",
    "iot",
    "react",
    "16mb",
    "embedded"
  ],
  "author": "ESP32 Charging Station Team",
  "license": "MIT",
  "devDependencies": {
    "axios": "^1.6.0",
    "form-data": "^4.0.0",
    "fs-extra": "^11.1.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "."
  },
  "bugs": {
    "url": "."
  },
  "homepage": ".",
  "platformio": {
    "platform": "espressif32",
    "framework": "arduino",
    "board": "esp32-wrover-kit"
  },
  "esp32": {
    "flash_size": "16MB",
    "psram_size": "8MB",
    "partition_table": "partitions_16mb.csv",
    "filesystem": "LittleFS"
  }
}